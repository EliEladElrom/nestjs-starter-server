{
  "name": "nextjs-starter-server",
  "version": "0.0.1",
  "description": "Nextjs-starter-server back end built with NestJS and TypeScript",
  "author": "",
  "private": true,
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "check-types": "tsc",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "generate-types": "node scripts/jsonToTs.js",
    "start": "nest start",
    "dev": "concurrently \"npm run watch:build\" \"npm run watch:json\"",
    "watch:build": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "watch:json": "watch 'npm run generate-types' ./swagger",
    "prepare": "husky install",
    "isready": "npm run check-types && npm run test && npm run-script build"
  },
  "dependencies": {
    "@nestjs/passport": "8.0.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "@nestjs/common": "8.0.4",
    "@nestjs/config": "1.0.0",
    "@nestjs/core": "8.0.3",
    "@nestjs/platform-express": "8.0.3",
    "cache-manager": "3.4.4",
    "nestjs-pino": "1.4.0",
    "passport": "0.4.1",
    "passport-http-bearer": "1.0.1",
    "pino-pretty": "5.1.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "8.0.2",
    "@nestjs/schematics": "8.0.1",
    "@nestjs/swagger": "5.0.3",
    "@nestjs/testing": "8.0.3",
    "@types/cache-manager": "3.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/node": "16.0.0",
    "@types/passport-http-bearer": "1.0.37",
    "@types/supertest": "2.0.11",
    "@types/webpack-env": "1.16.2",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.2",
    "concurrently": "6.2.0",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.0.1",
    "openapi-typescript": "4.0.2",
    "prettier": "2.3.2",
    "run-script-webpack-plugin": "0.0.11",
    "supertest": "6.1.3",
    "swagger-ui-express": "4.1.6",
    "ts-jest": "27.0.4",
    "ts-loader": "9.2.3",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5",
    "watch": "1.0.2",
    "webpack": "5.43.0",
    "webpack-node-externals": "3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-types && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache",
      "git add --force"
    ],
    "*.{json,md,html}": [
      "prettier --write",
      "git add --force"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
